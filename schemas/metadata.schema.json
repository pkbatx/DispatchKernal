{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DispatchKernel Metadata",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "summary",
    "participants",
    "sentiment",
    "call_datetime",
    "timezone",
    "action_items",
    "issues"
  ],
  "properties": {
    "summary": { "type": ["string", "null"] },
    "participants": {
      "type": "array",
      "items": { "type": "string" }
    },
    "sentiment": {
      "type": ["string", "null"],
      "enum": ["positive", "neutral", "negative", null]
    },
    "call_datetime": { "type": ["string", "null"] },
    "timezone": { "type": ["string", "null"] },
    "action_items": {
      "type": "array",
      "items": { "type": "string" }
    },
    "issues": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
